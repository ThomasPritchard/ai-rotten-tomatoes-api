{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",                             
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,                                     
      "esModuleInterop": true,                            
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,           
      "moduleResolution": "node",
      "resolveJsonModule": true,                        
      "removeComments": true,                                   
      "noImplicitAny": false,                          
      "types": ["reflect-metadata","node", "jest"],  
      "experimentalDecorators": true,                   
      "emitDecoratorMetadata": true,
      "baseUrl": "./src",
      "paths": {
        "@entities/*": ["entities/*"],
        "@providers/*": ["providers/*"],
        "@repositories/*": ["repositories/*"],
        "@useCases/*": ["useCases/*"]
      }                            
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "test/**/*"
    ]
  }